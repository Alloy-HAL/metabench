<% if n > 10 %>
    #define FUSION_MAX_LIST_SIZE <%= ((n + 9) / 10) * 10 %>
<% end %>

#include <boost/fusion/include/as_list.hpp>
#include <boost/fusion/include/filter_if.hpp>
#include <boost/fusion/include/make_list.hpp>

#include <type_traits>
namespace fusion = boost::fusion;


struct is_even {
    template <typename N>
    using apply = std::integral_constant<bool, N::value % 2 == 0>;
};

int main() {
    auto xs = fusion::make_list(
        <%= (1..n).map { |i| "std::integral_constant<int, #{i}>{}" }.join(', ') %>
    );

    auto result = fusion::as_list(fusion::filter_if<is_even>(xs));
    (void)result;
}
