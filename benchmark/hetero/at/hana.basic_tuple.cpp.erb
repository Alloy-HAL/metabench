#include <boost/hana/basic_tuple.hpp>
namespace hana = boost::hana;


template <int>
struct x { };

int main() {
    constexpr auto tuple = hana::make_basic_tuple(
        <%= (1..n).map { |n| "x<#{n}>{}" }.join(', ') %>
    );
    constexpr auto result = hana::get_impl<<%= n - 1 %>>(tuple);
    (void)result;
}
