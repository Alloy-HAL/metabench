#include <boost/hana/experimental/types.hpp>
#include <boost/hana/integral_constant.hpp>
#include <boost/hana/replace_if.hpp>
#include <boost/hana/type.hpp>
namespace hana = boost::hana;

struct is_even {
    template<int i>
    hana::bool_<i % 2 == 0> operator()(hana::basic_type<hana::int_<i>> const&) const;
};

int main() {
    auto types = hana::experimental::types<
        <%= (1..n).map { |i| "hana::int_<#{i}>" }.join(', ') %>
    >{};

#if defined(METABENCH)
    auto result = hana::replace_if(types, is_even{}, hana::type<void>{});
#endif
}
