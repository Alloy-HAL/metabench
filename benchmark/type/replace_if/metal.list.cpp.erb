#include <metal.hpp>

template<typename N>
using is_even = metal::number<N::type::value % 2 == 0>;

using list = metal::list<
    <%= (1..n).map { |i| "metal::number<#{i}>" }.join(', ') %>
>;

#if defined(METABENCH)
using result = metal::replace_if<list, metal::lambda<is_even>, void>;
#endif

